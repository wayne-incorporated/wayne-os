  include_dirs = [
    "${libbase_src}/include",
    "${liblog_src}/include",
    "${libcutils_src}/include",
    "${libcppbor_src}/include/cppbor",
  ]
  cflags_cc = [ "-std=c++17" ]
  cflags = [
    "-Wno-defaulted-function-deleted",
    "-Wno-format-nonliteral",
    "-Wno-implicit-fallthrough",
  ]
  defines = [
    "__ANDROID_API__=32",  # Android T
  ]
}


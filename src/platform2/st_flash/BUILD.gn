import("//common-mk/pkg_config.gni")

group("all") {
  deps = [ ":st_flash" ]
}

pkg_config("target_defaults") {
  pkg_deps = [
    "libbrillo",
    "libchrome",
  ]
}

executable("st_flash") {
  sources = [ "st_flash.cc" ]
  configs += [ ":target_defaults" ]
  install_path = "bin"
}

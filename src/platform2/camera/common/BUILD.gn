      # //camera/features/zsl:zsl_helper_test and
      # //camera/features:feature_profile_test after the issue is
      # resolved.
      ":feature_profile_test",
      ":zsl_helper_test",
    ]
  }

  if (use.fuzzer) {
    deps += [ ":camera_still_capture_processor_impl_fuzzer" ]
  }
}

